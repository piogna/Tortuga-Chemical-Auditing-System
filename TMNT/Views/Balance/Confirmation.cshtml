@model TMNT.Models.ViewModels.BalanceTestViewModel

@{
    ViewBag.Title = "Create";
}

<style>
    #page-wrapper {
        min-height: 900px;
    }

    input[type=text] {
        width: 100%;
        border-radius: 0 !important;
    }

    button {
        width: 33%;
        color: #fff !important;
        border-radius: 0 !important;
        background-color: #428BCA !important;
        float: right;
    }

    .next-section {
        float: right;
        bottom: 0;
    }

    .previous-section {
        float: left;
        bottom: 0;
    }

    li.section-list > a:hover {
        color: #4B4B4B !important;
        cursor: default !important;
    }
</style>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    New Daily Balance Calibration Test
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-flask"></i> New Balance Test
                    </li>
                </ol>
            </div>
        </div>

        <section id="section-bar">
            <div class="tabs tabs-style-bar">
                <nav>
                    <ul>
                        <li class="section-list"><a href="#section-bar-1" class="icon icon-config"><span>Test Info</span></a></li>
                        <li class="section-list"><a href="#section-bar-3" class="icon icon-display"><span>Finalize</span></a></li>
                        <li class="section-list tab-current"><a href="#section-bar-4" id="section-confirmation" style="pointer-events: none;" class="icon icon-coffee"><span>Confirmation</span></a></li>
                    </ul>
                </nav>
                @Html.ValidationSummary(true)
                <div class="content-wrap">
                    <section id="section-bar-1">
                        <!-- just for show -->
                    </section>
                    <section id="section-bar-2">
                        <!-- just for show -->
                    </section>
                    <section id="section-bar-3" class="content-current">
                        <div class="form-group">
                            <div class="row">
                                <h1 class="col-lg-2 col-md-offset-5" style="margin-bottom:20px;margin-top:0;">Summary</h1>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-4">
                                    @Html.LabelFor(model => model.BalanceId): @Html.DisplayFor(model => model.BalanceId)
                                    <br />
                                    <div>
                                        @Html.LabelFor(model => model.Location): @Html.DisplayFor(model => model.Location.LocationName)
                                    </div>
                                    <div>
                                        @Html.LabelFor(model => model.WeightOne): @Html.DisplayFor(model => model.WeightOne)
                                    </div>
                                    @if (Model.WeightTwo != 0.0) {
                                        <div>
                                            @Html.LabelFor(model => model.WeightTwo): @Html.DisplayFor(model => model.WeightTwo)
                                        </div>
                                    }
                                    @if (Model.WeightThree != 0.0) {
                                        <div>
                                            @Html.LabelFor(model => model.WeightThree): @Html.DisplayFor(model => model.WeightThree)
                                        </div>
                                    }
                                    @if (Model.Comments != null) {
                                        <div>
                                            @Html.LabelFor(model => model.Comments): @Html.DisplayFor(model => model.Comments)
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-lg-offset-4">
                                @Html.ActionLink("Dashboard", "Index", new { @controller = "Home" }, new { @class = "btn btn-default col-md-offset-2" })
                                @*<a style="margin-right:15px;" href='#section-bar-1' class="btn btn-default">Dashboard</a>*@
                                @Html.ActionLink("New Balance Test", "Create", new { @controller = "ScaleTest" }, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
        @*@Html.Partial("~/Views/Shared/_SectionsPartial.cshtml")*@
    </div>
    <script src="http://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script>
        $(function () {
            //var v = $('li.tab-current').first().removeClass('tab-current');

            $('li.section-list > a').click(function (event) {
                event.preventDefault();
            });
        });
    </script>
}