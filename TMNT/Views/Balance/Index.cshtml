@model IEnumerable<TMNT.Models.Device>

    @{
        ViewBag.Title = "Index";
    }

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Balances
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-flask"></i> Balances
                </li>
            </ol>
        </div>
    </div>

    <p>       
        @Html.ActionLink("New Balance Verification", "VerificationUnspecified", "Balance", htmlAttributes: new { @class = "btn btn-default" })
        @Html.ActionLink("Add New Balance", "Create", "Balance", htmlAttributes: new { @class = "btn btn-default" })
    </p>

    <hr />

    <table class="table table-bordered table-striped">
        <tr>
            <th>Action</th>
            <th>@Html.DisplayNameFor(model => model.Department.DepartmentCode)</th>
            <th>@Html.DisplayNameFor(model => model.IsVerified)</th>
            <th>@Html.DisplayNameFor(model => model.LastVerifiedBy)</th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DeviceId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DeviceId }) |
                    @Html.ActionLink("Archive", "Delete", new { id = item.DeviceId })
                </td>
                <td>
                    @item.Department.DepartmentCode
                </td>
                @if (!@item.IsVerified) {
                    <td>
                        @*@Html.ActionLink("Not Verified - Click Here to Verify", "CreateVerification", new { @id = item.DeviceId })*@
                        @Html.ActionLink("Verify", "Verification", new { id = item.DeviceId })
                    </td>
                } else {
                    <td>
                        Verified
                    </td>
                }
                @*<td>
                    @if (!@item.IsVerified) {
                        @Html.ActionLink("Verification Test", "Create", new { id = item.DeviceId })
                    }
                </td>*@
                <td>
                    @item.LastVerifiedBy
                </td>
            </tr>
        }
    </table>