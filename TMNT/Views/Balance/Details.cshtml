@model TMNT.Models.ViewModels.BalanceViewModel
@{
    ViewBag.Title = "Details";
}

<script src="http://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="http://cdn.datatables.net/1.10.7/css/jquery.dataTables.min.css" />

<style>
    /* Fixing Side Menu Selectors */
    #side-menu > li:first-child > a {
        background-color: #F8F8F8;
    }

    /*#region overriding data table css*/
    table.dataTable thead .sorting_asc::after {
        content: none !important;
    }

    table.dataTable thead .sorting_desc::after {
        content: none !important;
    }

    table.dataTable thead .sorting::after {
        content: none !important;
    }
    /*#endregion*/

    /*#region overriding pagination tabs css*/
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        box-sizing: border-box;
        display: inline-block;
        min-width: 1.5em;
        padding: 0.5em 1em;
        margin-left: 0;
        text-align: center;
        text-decoration: none !important;
        cursor: pointer;
        color: #337ab7 !important;
        border: 1px solid #ddd;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #eee;
            border: 1px solid #ddd;
            color: #337ab7 !important;
        }

    .previous {
        border-bottom-left-radius: 4px;
        border-top-left-radius: 4px;
    }

    .next {
        border-bottom-right-radius: 4px;
        border-top-right-radius: 4px;
    }

    .disabled {
        border: 1px solid #ddd !important;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button.disabled:hover {
        cursor: not-allowed;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
        z-index: 2;
        color: #fff !important;
        cursor: default;
        background: #337ab7 !important;
        border: 1px solid #337ab7;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
            color: #fff !important;
            cursor: default;
            border: 1px solid #337ab7;
        }
    /*#endregion*/
</style>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @Model.DeviceCode Balance Details
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-wrench"></i> Devices / <i class="fa fa-balance-scale"></i> Balances / <i class="fa fa-clipboard"></i> @Model.DeviceCode Balance Details
            </li>
        </ol>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index", "Balance", htmlAttributes: new { @class = "btn btn-default" })
</p>

<hr />

<div class="col-md-12" style="background-color: lightgrey;">
    <h4 style="padding-top:5px;padding-bottom:5px;color:#00000f">@Model.DeviceCode Last 5 Balance Verifications</h4>
</div>

<table id="myTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Verified On</th>
            <th>Verified By</th>
            <th>@Html.DisplayNameFor(model => model.WeightOne)</th>
            <th>@Html.DisplayNameFor(model => model.WeightTwo)</th>
            <th>@Html.DisplayNameFor(model => model.WeightThree)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DeviceVerifications != null) {
            foreach (var item in Model.DeviceVerifications) {
                <tr>
                    <td>@item.VerifiedOn</td>
                    <td>@item.User.FirstName @item.User.LastName</td>
                    <td>@item.WeightOne</td>
                    <td>@item.WeightTwo</td>
                    <td>@item.WeightThree</td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Verified On</th>
            <th>Verified By</th>
            <th>@Html.DisplayNameFor(model => model.WeightOne)</th>
            <th>@Html.DisplayNameFor(model => model.WeightTwo)</th>
            <th>@Html.DisplayNameFor(model => model.WeightThree)</th>
        </tr>
    </tfoot>
</table>

<div class="col-md-12" style="background-color: lightgrey;">
    <h4 style="padding-top:5px;padding-bottom:5px;color:#00000f">Balance Information</h4>
</div>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DeviceCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeviceCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsVerified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsVerified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastVerifiedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastVerifiedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Department.DepartmentCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Department.DepartmentCode)
        </dd>
    </dl>

</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BalanceId })
    @*@Html.ActionLink("Back to List", "Index")*@
</p>
<script>
        $(function () {
            $('#myTable').dataTable({
                "pageLength": 50
            });
        });
</script>