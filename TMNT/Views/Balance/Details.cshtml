@model TMNT.Models.ViewModels.BalanceViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Device</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DeviceCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeviceCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsVerified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsVerified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastVerifiedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastVerifiedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Department.DepartmentCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Department.DepartmentCode)
        </dd>
    </dl>

</div>

<table class="table table-striped table-bordered">
    <tr>
        <th>Verified On</th>
        <th>Verified By</th>
    </tr>
    @foreach (var item in Model.DeviceVerifications.OrderBy(x => x.VerifiedOn)) {
        <tr>
            <td>@item.VerifiedOn</td>
            <td>@item.User.FirstName @item.User.LastName</td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BalanceId }) |
