@model TMNT.Models.ViewModels.BalanceViewModel
@{
    ViewBag.Title = "Details";
}

@section AddToHead {
    <link href="../../Content/dataTables.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @Model.DeviceCode Balance Details
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-wrench"></i> Devices / <i class="fa fa-balance-scale"></i> Balances / <i class="fa fa-clipboard"></i> @Model.DeviceCode Balance Details
            </li>
        </ol>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index", "Balance", null, htmlAttributes: new { @class = "btn btn-default" })
    @Html.ActionLink("Edit " + Model.DeviceCode, "Edit", new { id = Model.BalanceId }, htmlAttributes: new { @class = "btn btn-default" })
</p>

<hr />

<div class="col-md-12" style="background-color: lightgrey;">
    <h4 style="padding-top:5px;padding-bottom:5px;color:#00000f">@Model.DeviceCode Last 5 Balance Verifications</h4>
</div>

<table id="myTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Verified On</th>
            <th>Verified By</th>
            <th>@Html.DisplayNameFor(model => model.WeightOne)</th>
            <th>@Html.DisplayNameFor(model => model.WeightTwo)</th>
            <th>@Html.DisplayNameFor(model => model.WeightThree)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DeviceVerifications != null) {
            foreach (var item in Model.DeviceVerifications) {
                <tr>
                    <td>@item.VerifiedOn</td>
                    <td>@item.User.FirstName @item.User.LastName</td>
                    <td>@item.WeightOne</td>
                    <td>@item.WeightTwo</td>
                    <td>@item.WeightThree</td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Verified On</th>
            <th>Verified By</th>
            <th>@Html.DisplayNameFor(model => model.WeightOne)</th>
            <th>@Html.DisplayNameFor(model => model.WeightTwo)</th>
            <th>@Html.DisplayNameFor(model => model.WeightThree)</th>
        </tr>
    </tfoot>
</table>

<div class="col-md-12" style="background-color: lightgrey;">
    <h4 style="padding-top:5px;padding-bottom:5px;color:#00000f">Balance Information</h4>
</div>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DeviceCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeviceCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsVerified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsVerified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastVerifiedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastVerifiedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Department.DepartmentCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Department.DepartmentCode)
        </dd>
    </dl>
</div>
@Scripts.Render("~/datatables")