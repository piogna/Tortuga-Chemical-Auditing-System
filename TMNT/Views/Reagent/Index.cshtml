@model IEnumerable<TMNT.Models.ViewModels.StockReagentViewModel>

@{
    ViewBag.Title = "Index";
}

@section AddToHead {
    <link href="../../Content/dataTables.min.css" rel="stylesheet" />
}

<style>
    /*#region overriding data table css*/
    table.dataTable thead .sorting_asc::after {
        content: none !important;
    }

    table.dataTable thead .sorting_desc::after {
        content: none !important;
    }

    table.dataTable thead .sorting::after {
        content: none !important;
    }

    /*#region overriding pagination tabs css*/
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        box-sizing: border-box;
        display: inline-block;
        min-width: 1.5em;
        padding: 0.5em 1em;
        margin-left: 0;
        text-align: center;
        text-decoration: none !important;
        cursor: pointer;
        color: #337ab7 !important;
        border: 1px solid #ddd;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #eee;
            border: 1px solid #ddd;
            color: #337ab7 !important;
        }

    .previous {
        border-bottom-left-radius: 4px;
        border-top-left-radius: 4px;
    }

    .next {
        border-bottom-right-radius: 4px;
        border-top-right-radius: 4px;
    }

    .disabled {
        border: 1px solid #ddd !important;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button.disabled:hover {
        cursor: not-allowed;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
        z-index: 2;
        color: #fff !important;
        cursor: default;
        background: #337ab7 !important;
        border: 1px solid #337ab7;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
            color: #fff !important;
            cursor: default;
            border: 1px solid #337ab7;
        }
    /*#endregion*/
</style>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Stock Reagents
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-flask"></i> Stock Reagents
            </li>
        </ol>
    </div>
</div>

<p>
    @Html.ActionLink("New Reagent", "Create", "Reagent", null, htmlAttributes: new { @class = "btn btn-default" })
</p>

<hr />

<table id="myTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Action</th>
            <th>
                @Html.DisplayNameFor(model => model.ReagentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEntered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnteredBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCode)
            </th>
            <th>
                Amount Remaining
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ReagentId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ReagentId }) |
                    <a href="#">Print Label</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReagentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEntered)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnteredBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)@Html.DisplayFor(modelItem => item.Unit.UnitShorthandName)
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Action</th>
            <th>
                @Html.DisplayNameFor(model => model.ReagentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEntered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnteredBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCode)
            </th>
            <th>
                Amount Remaining
            </th>
        </tr>
    </tfoot>
</table>
@Scripts.Render("~/datatables")