@model TMNT.Models.ViewModels.IntermediateStandardCreateViewModel

@{
    ViewBag.Title = "Create";
}

@section AddToHead {
    <link href="~/Content/chosen.css" rel="stylesheet" />
    <link href="~/Content/Datepicker/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    @Styles.Render("~/maxxam-forms")
    <style>
        .select2-container--default {
            width: 100% !important;
        }

        .select2-search__field {
            width: 100% !important;
        }

        .lot-numbers-hidden option {
            display: none;
        }

        .lot-numbers-hidden optgroup {
            display: none;
        }

        .lot-numbers-shown {
            display: block;
        }

        .lot-numbers-no-selection {
            display: block;
        }

        .opt {
            display: none;
        }

            .opt option {
                display: none;
            }

        ul.chosen-choices {
            border: 1px solid #ccc !important;
            background-image: none !important;
        }

        li.search-field {
            padding-top: 3px !important;
            height: 32px !important;
            padding-left: 5px !important;
            font-size: 14px !important;
        }

        li.search-choice {
            margin: 5px 5px 3px 0 !important;
        }

        div.chosen-container {
            width: 50% !important;
        }
    </style>
}

@using (Html.BeginForm(Html.BeginForm("Create", "IntermediateStandard", null, FormMethod.Post, new { enctype = "multipart/form-data" }))) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    New Intermediate Standard
                </h1>
                <ol class="breadcrumb no-border-radius">
                    <li class="active">
                        <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-flask"></i> Intermediate Standards / <i class="fa fa-star-o"></i> New Intermediate Standard
                    </li>
                </ol>
            </div>
        </div>

        <p>
            @Html.ActionLink("Back to List", "Index", "IntermediateStandard", null, htmlAttributes: new { @class = "btn btn-default btn-back-to-list" })
        </p>

        <section id="section-bar">
            <div class="tabs tabs-style-bar">
                <nav>
                    <ul>
                        <li><a href="#section-bar-1" class="icon icon-box"><span>Prep List</span></a></li>
                        <li><a href="#section-bar-2" class="icon icon-config"><span>Intermediate Standard Info</span></a></li>
                        <li><a href="#section-bar-3" class="icon icon-display"><span>Finalize</span></a></li>
                    </ul>
                </nav>
                <div class="content-wrap">
                    <section id="section-bar-1">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <!-- Start Building Recipe Section -->
                        @Html.Partial("_SectionHeader", "Build Your Intermediate Standard")
                        <div id="build-recipe">
                            <div class="col-md-4">
                                <div class="alert alert-grey no-border-radius prep-list-wrapper">
                                    <h4 class="text-center">Prep List Item</h4>
                                    <hr />
                                    <div class="form-group zero-left-right-margin">
                                        <div class="input-group">
                                            <div class="input-group-addon"></div>
                                            <select name="Chemical Type" id="ChemicalType" class="type-validation input-xlarge-fuid form-control valid no-border-radius">
                                                <option value="">Choose Chemical Type</option>
                                                <optgroup label="Item Type">
                                                    @foreach (var item in Model.ChemicalTypes) {
                                                        <option value="@item">
                                                            @item
                                                        </option>
                                                    }
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group zero-left-right-margin">
                                        <div class="input-group">
                                            <div class="input-group-addon"></div>
                                            <select name="LotNumbers" disabled="disabled" id="LotNumbers" class="type-validation input-xlarge-fuid form-control valid no-border-radius">
                                                <option class="opt-label" value="">Select a Chemical Type First</option>
                                                <optgroup class="opt opt-reagent" label="Reagents">
                                                    @foreach (var item in Model.StockReagents) {
                                                        <option value="@item.StockReagent.LotNumber">@item.StockReagent.LotNumber</option>
                                                    }
                                                </optgroup>
                                                <optgroup class="opt opt-standard" label="Standards">
                                                    @foreach (var item in Model.StockStandards) {
                                                        <option value="@item.StockStandard.LotNumber">@item.StockStandard.LotNumber</option>
                                                    }
                                                </optgroup>
                                                <optgroup class="opt opt-int-standard" label="Intermediate Standards">
                                                    @foreach (var item in Model.IntermediateStandards) {
                                                        <option value="@item.IntermediateStandard.MaxxamId">@item.IntermediateStandard.MaxxamId</option>
                                                    }
                                                </optgroup>
                                            </select>

                                        </div>
                                    </div>
                                    <div class="form-group zero-left-right-margin">
                                        <div class="input-group">
                                            <div class="input-group-addon"></div>
                                            <input name="Amount" id="Amount" type="number" min="0" class="form-control text-box single-line no-border-radius" autocomplete="off" placeholder="Amount" />
                                        </div>
                                    </div>
                                    <div class="form-group zero-left-right-margin">
                                        <div class="input-group">
                                            <div class="input-group-addon"></div>
                                            <select data-placeholder="Units.." name="Unit" id="Units" class="Units type-validation input-xlarge-fuid form-control valid no-border-radius" multiple="multiple">
                                                <optgroup label="Weights">
                                                    @foreach (var item in Model.WeightUnits) {
                                                        <option value="@item.UnitId">
                                                            @item.UnitShorthandName
                                                        </option>
                                                    }
                                                </optgroup>
                                                <optgroup label="Volumes">
                                                    @foreach (var item in Model.VolumetricUnits) {
                                                        <option value="@item.UnitId">
                                                            @item.UnitShorthandName
                                                        </option>
                                                    }
                                                </optgroup>
                                                <optgroup label="Other">
                                                    <option value="Other">@Model.OtherUnit.UnitShorthandName</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group zero-left-right-margin">
                                        <a href="#" id="another-item" class="btn btn-primary">Add Item</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="alert alert-grey no-border-radius prep-list-wrapper">
                                    <h4 class="text-center">Prep List</h4>
                                    <hr />
                                    <div style="font-size:14px;">
                                        <table id="recipe-table" class="table alert-success table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Item #</th>
                                                    <th>Chemical Type</th>
                                                    <th>ID</th>
                                                    <th>Amount</th>
                                                    <th>Remove Item</th>
                                                </tr>
                                            </thead>
                                            <tbody id="recipe-tbody"></tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="form-group">
                                </div>
                                <div class="form-group">
                                    <a href='#section-bar-2' disabled="disabled" class="btn btn-default next-section btn-next">Next »</a>
                                </div>
                                <div class="form-group">
                                    <div id="button-message" class="pull-right button-message-error">Fill out required fields.</div>
                                </div>
                            </div>
                        </div>
                        <!-- /End Recipe Section -->
                    </section>
                    <!-- SECTION TWO -->
                    <section id="section-bar-2">
                        @Html.Partial("_SectionHeader", "Intermediate Standard Information")
                        <div class="container">
                            <div class="col-md-5-5">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon"></div>
                                        @Html.EditorFor(model => model.Replaces, new { htmlAttributes = new { @placeholder = "Replaces", @class = "input-summary form-control" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Replaces)
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon"></div>
                                        @Html.EditorFor(model => model.ReplacedBy, new { htmlAttributes = new { @placeholder = "Replaced By", @class = "input-summary form-control" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ReplacedBy)
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required" title="Required Field"></div>
                                        @Html.EditorFor(model => model.UsedFor, new { htmlAttributes = new { @placeholder = "Used For", @rows = 6, @style = "resize:none;", @class = "input-summary form-control no-border-radius required-field-s2" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.UsedFor)
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required" title="Required Field"></div>
                                        <select id="storage-locations" name="Storage" class="form-control no-border-radius required-field-s2 input-summary">
                                            <option value="">Storage Requirement..</option>
                                            <optgroup label="Storage Req's'">
                                                @foreach (var item in Model.Storage) {
                                                    <option value="@item">
                                                        @item
                                                    </option>
                                                }
                                            </optgroup>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5-5 pull-right">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required" title="Required Field"></div>
                                        @Html.EditorFor(model => model.TotalAmount, new { htmlAttributes = new { @placeholder = "Total Amount", @style = "width:50%;", @class = "units-list input-summary form-control required-field-s2", @Value = "", @autocomplete = "off" } })
                                        <select data-placeholder="Units.." name="TotalAmountUnits" id="Units" class="Units type-validation input-xlarge-fuid form-control input-summary valid no-border-radius required-field-s2" multiple="multiple">
                                            <optgroup label="Weights">
                                                @foreach (var item in Model.WeightUnits) {
                                                    <option value="@item.UnitShorthandName">
                                                        @item.UnitShorthandName
                                                    </option>
                                                }
                                            </optgroup>
                                            <optgroup label="Volumes">
                                                @foreach (var item in Model.VolumetricUnits) {
                                                    <option value="@item.UnitShorthandName">
                                                        @item.UnitShorthandName
                                                    </option>
                                                }
                                            </optgroup>
                                            <optgroup label="Other">
                                                <option value="Other">Other</option>
                                            </optgroup>
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.TotalAmount)
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required" title="Required Field"></div>
                                        @Html.EditorFor(model => model.FinalConcentration, new { htmlAttributes = new { @placeholder = "Final Concentration", @style = "width:50%;", @class = "input-summary form-control required-field-s2", @Value = "", @autocomplete = "off" } })
                                        <select data-placeholder="Units.." name="FinalConcentrationUnits" id="Units" class="Units type-validation input-xlarge-fuid form-control input-summary valid no-border-radius required-field-s2" multiple="multiple">
                                            <optgroup label="Weights">
                                                @foreach (var item in Model.WeightUnits) {
                                                    <option value="@item.UnitShorthandName">
                                                        @item.UnitShorthandName
                                                    </option>
                                                }
                                            </optgroup>
                                            <optgroup label="Volumes">
                                                @foreach (var item in Model.VolumetricUnits) {
                                                    <option value="@item.UnitShorthandName">
                                                        @item.UnitShorthandName
                                                    </option>
                                                }
                                            </optgroup>
                                            <optgroup label="Other">
                                                <option value="Other">Other</option>
                                            </optgroup>
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.FinalConcentration)
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required" title="Required Field"></div>
                                        @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @placeholder = "Click to Select Date", @class = "date-input input-summary form-control required-field-s2", @Value = "", @type = "text" } })
                                        <div class="input-group-addon input-group-addon-md">Expiry Date</div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ExpiryDate)
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required" title="Required Field"></div>
                                        @Html.EditorFor(model => model.MaxxamId, new { htmlAttributes = new { @placeholder = "Maxxam ID", @class = "input-summary form-control required-field-s2" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.MaxxamId)
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required" title="Required Field"></div>
                                        <select id="device-selector" name="Devices" class="select2 form-control no-border-radius required-field-s2 input-summary" multiple="multiple">
                                            <optgroup label="Balance ID's">
                                                @foreach (var item in Model.BalanceDevices) {
                                                    if (@item.IsVerified) {
                                                        <option value="@item.DeviceCode">
                                                            @item.DeviceCode
                                                        </option>
                                                    } else {
                                                        <option disabled="disabled" value="@item.DeviceCode">
                                                            @item.DeviceCode - Not Verified
                                                        </option>
                                                    }
                                                }
                                            </optgroup>
                                            <optgroup label="Volumetric ID's">
                                                @foreach (var item in Model.VolumetricDevices) {
                                                    if (@item.IsVerified) {
                                                        <option value="@item.DeviceCode">
                                                            @item.DeviceCode
                                                        </option>
                                                    } else {
                                                        <option disabled="disabled" value="@item.DeviceCode">
                                                            @item.DeviceCode - Not Verified
                                                        </option>
                                                    }
                                                }
                                                <option value="VOL902-W">VOL902-W</option>
                                                <option value="None">No Device Used</option>
                                            </optgroup>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @Html.Partial("_SectionHeader", "SDS Upload and Notes")
                        <div class="container">
                            <div class="col-md-5-5">
                                <div class="input-group">
                                    <div class="input-group-addon addon-required" title="Required Field"></div>
                                    <input type="file" id="MSDS" name="uploadMSDS" class="form-control btn btn-default required-field-s2" accept=".pdf" />
                                    <div class="input-group-addon input-group-addon-md">Upload SDS</div>
                                </div>
                            </div>
                            <div class="col-md-5-5 pull-right">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required" title="Required Field"></div>
                                        @Html.EditorFor(model => model.MSDSNotes, new { htmlAttributes = new { @rows = 2, @style = "resize:none;", @placeholder = "SDS Notes", @class = "input-summary form-control no-border-radius required-field-s2", @maxlength = 50 } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.MSDSNotes)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-10" style="padding-top:20px;">
                                    <a href='#section-bar-3' disabled="disabled" id="btn-review" class="btn btn-default next-section btn-review">Review and Submit</a>
                                    <a href='#section-bar-1' class="btn btn-default previous-section">« Previous</a>
                                </div>
                                <div class="col-md-offset-1 col-md-10">
                                    <div id="button-message-s2" class="pull-right button-message-error">Fill out required fields.</div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section id="section-bar-3">
                        <div class="form-group">
                            <div class="container">
                                <table class="table table-bordered table-striped summary-table">
                                    <thead>
                                        <tr>
                                            <th>Field</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody style="font-size:14px;"></tbody>
                                    <tfoot>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <input type="button" href='#section-bar-2' value="Cancel" class="btn btn-warning previous-section" />
                                    <input name="submit" type="submit" class="btn btn-primary" value="Save" />
                                    <input name="submit" type="submit" class="btn btn-primary" value="Save & New" />
                                    <div class="btn-group" data-toggle="buttons">
                                        <label class="btn btn-default center-block active"><input type="radio">Print Label</label>
                                        <label class="btn btn-default center-block"><input type="radio">Don't Print Label</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div><!-- /content -->
            </div><!-- /tabs -->
        </section>
        @Html.Partial("~/Views/Shared/_SectionsPartial.cshtml")
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/DatePickerJS/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script src="~/Scripts/CustomMaxxamJS/intermediate-standard-form-validation.js"></script>

    <script>
        $(function () {
            $(".select2").select2({
                placeholder: "Devices Used..",
                allowClear: true,
                maximumSelectionLength: 2
            });

            $(".Units").chosen({
                max_selected_options: 2,
                placeholder: "Units.."
            });

            $('.date-input').datepicker({
                format: "yyyy-mm-dd",
                startDate: "Today",
                startView: 2,
                todayBtn: "linked",
                clearBtn: true,
                orientation: "bottom auto",
                autoclose: true
            });
        });
    </script>
}