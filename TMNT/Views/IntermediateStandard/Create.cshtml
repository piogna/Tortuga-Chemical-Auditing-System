    }

    input[type=text] {
        width: 100%;
    }

    button {
        width: 33%;
        color: #fff !important;
        border-radius: 0 !important;
        background-color: #428BCA !important;
        float: right;
    }

    .next-section {
        float: right;
        bottom: 0;
    }

    .previous-section {
        float: left;
        bottom: 0;
    }

    #Unit {
        border-radius: 0;
        border-left: none;
    }

    /* Asterisk Required */
    .required {
        content: " *";
        color: red;
    }

    .input-group-addon {
        border-radius: 0 !important;
    }

    /* Required Addon */
    .addon-required {
        color: red;
        border-radius: 0;
        font-size: 22px;
        padding: 10px 9px 0 9px;
    }

        .addon-required:after {
            content: "*";
            margin-top: 4px;
        }
</style>

<script>
    $(function () {
        //fixing section 1 getting the appropriate classes
        $('#section-bar-1').addClass('section');

        //filling summary table
        var inputs = $('.input-summary');
        var table = $('table.table-bordered > tbody');

        $('.btn-review').on('click', function (e) {
            //absolutely prevent duplicate rows
            if ($('table.table-bordered > tbody > tr').length > 0) {
                table.find("tr").remove();
            }
            var row = "";
            for (var i = 0; i < inputs.length; i++) {
                row += "<tr>" +//drilling into each element and retrieving the value of each "name" attribute
                    "<td>" + inputs[i].attributes.getNamedItem('name').textContent.replace(/([A-Z])/g, ' $1').trim() + "</td><td>" + inputs[i].value + "</td>" +
                    "</tr>";
            }
            table.append(row);
        });
        
        //add another item
        $('#build-recipe').on('click', '#another-item', function (e) {
            e.preventDefault();
            var recipes = $('#build-recipe');
            
            var addRow =
                "<div class='row' style='margin:0 !important'>" +
                    "<div class='col-md-3'>" +
                        "<div class='form-group'>" +
                            "<select name='type' class='input-xlarge-fuid input-summary form-control valid'>" +
                                    "<option value='Reagent'>" +
                                        "Reagent" +
                                    "</option>" +
                                    "<option value='Standard'>" +
                                        "Standard" +
                                    "</option>" +
                                    "<option value='Intermedate Standard'>" +
                                        "Intermediate Standard" +
                                    "</option>" +
                            "</select>" +
                        "</div>" +
                    "</div>" +
                    "<div class='col-md-3'><input name='amount' type='text' class='input-summary form-control text-box single-line' placeholder='Amount' /></div>" +
                    "<div class='col-md-3'><input name='lotnumber' type='text' class='input-summary form-control text-box single-line' placeholder='Lot #' /></div>" +
                    "<div class='col-md-2'><a href='#' id='another-item' class='btn btn-default'>Add</a><a href='#' id='remove-item' class='btn btn-default' style='margin-left:5px;'>Remove</a></div>" +
                "</div>";
            recipes.find('#another-item').remove("#another-item");
            recipes.find('#remove-item').remove("#remove-item");
            recipes.append(addRow);
        });

        //remove item
        $('#build-recipe').on('click', '#remove-item', function (e) {
            e.preventDefault();
            var recipes = $('#build-recipe');
            recipes.children("div[class=row]:last").remove();
            recipes.children("div[class=row]:last").append("<div class='col-md-2'><a href='#' id='another-item' class='btn btn-default'>Add</a><a href='#' id='remove-item' class='btn btn-default' style='margin-left:5px;'>Remove</a></div>");
        });
    });
</script>

