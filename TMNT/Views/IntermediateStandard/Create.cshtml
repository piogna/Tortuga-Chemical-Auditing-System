@model TMNT.Models.ViewModels.IntermediateStandardViewModel

@{
    ViewBag.Title = "Create";
}

@section AddToHead {
    @Styles.Render("~/maxxam-forms")
}

@using (Html.BeginForm(Html.BeginForm("Create", "IntermediateStandard", null, FormMethod.Post, new { enctype = "multipart/form-data" }))) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    New Intermediate Standard
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-flask"></i> Intermediate Standards / <i class="fa fa-star-o"></i> New Intermediate Standard
                    </li>
                </ol>
            </div>
        </div>

        <p>
            @Html.ActionLink("Back to List", "Index", "IntermediateStandard", null, htmlAttributes: new { @class = "btn btn-default" })
        </p>

        <section id="section-bar">
            <div class="tabs tabs-style-bar">
                <nav>
                    <ul>
                        <li><a href="#section-bar-1" class="icon icon-config"><span>Inter. Standard Info</span></a></li>
                        <li><a href="#section-bar-2" class="icon icon-display"><span>Finalize</span></a></li>
                    </ul>
                </nav>
                @Html.ValidationSummary(true)
                <div class="content-wrap">
                    <section id="section-bar-1">
                        <!-- Start Building Recipe Section -->
                        <div class="col-md-12" style="background-color: lightgrey;">
                            <h4 style="padding-top:5px;padding-bottom:5px;color:#00000f">Build Your Intermediate Standard</h4>
                        </div>
                        <div id="build-recipe">
                            <div class="row" style="margin:0 !important">
                                <div class="col-md-2-5">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required"></div>
                                            <select name="Type" class="type-validation input-xlarge-fuid input-summary form-control valid no-border-radius required-field">
                                                <option value="">Choose Chemical Type</option>
                                                <optgroup label="Item Type">
                                                    @foreach (var item in ViewBag.Types) {
                                                        <option value="@item">
                                                            @item
                                                        </option>
                                                    }
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        <input name="Amount" type="number" min="0" class="input-summary form-control text-box single-line no-border-radius required-field" placeholder="Amount" />
                                        <div class="input-group-btn">
                                            <select name="Unit" class="type-validation input-xlarge-fuid input-summary form-control valid no-border-radius required-field" style="width:90px;">
                                                <option value="">Units</option>
                                                <optgroup label="Weights">
                                                    @foreach (var item in ViewBag.WeightUnits) {
                                                        <option value="@item.UnitId">
                                                            @item.UnitShorthandName
                                                        </option>
                                                    }
                                                </optgroup>
                                                <optgroup label="Volumes">
                                                    @foreach (var item in ViewBag.VolumeUnits) {
                                                        <option value="@item.UnitId">
                                                            @item.UnitShorthandName
                                                        </option>
                                                    }
                                                </optgroup>
                                                <optgroup label="Other">
                                                    <option value="Other">@ViewBag.OtherUnit.UnitShorthandName</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-2-5 input-no-left-padding">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        <input name="IdCode" type="text" class="input-summary form-control text-box single-line no-border-radius required-field" placeholder="ID Code" />
                                    </div>
                                </div>
                                <div class="col-md-2-5 input-no-left-padding">
                                    <a href="#" id="another-item" class="btn btn-default">Add</a>
                                    <a disabled="disabled" href="#" id="remove-item" class="btn btn-default">Remove</a>
                                </div>
                            </div>
                        </div>
                        <!-- /End Recipe Section -->
                        <div class="col-md-12" style="background-color: lightgrey;">
                            <h4 style="padding-top:5px;padding-bottom:5px;color:#00000f">Intermediate Standard Information</h4>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon"></div>
                                        @Html.EditorFor(model => model.Replaces, new { htmlAttributes = new { @placeholder = "Replaces", @class = "input-summary form-control" } })
                                        @Html.ValidationMessageFor(model => model.Replaces)
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon"></div>
                                        @Html.EditorFor(model => model.ReplacedBy, new { htmlAttributes = new { @placeholder = "Replaced By", @class = "input-summary form-control" } })
                                        @Html.ValidationMessageFor(model => model.ReplacedBy)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        @Html.EditorFor(model => model.UsedFor, new { htmlAttributes = new { @placeholder = "Used For", @rows = 6, @style = "resize:none;", @class = "input-summary form-control required-field" } })
                                        @Html.ValidationMessageFor(model => model.UsedFor)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        <select id="storage-locations" name="Storage" class="form-control no-border-radius required-field input-summary">
                                            <option value="">Storage Requirement..</option>
                                            <optgroup label="Storage Req's'">
                                                @foreach (var item in ViewBag.Storage) {
                                                    <option value="@item">
                                                        @item
                                                    </option>
                                                }
                                            </optgroup>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        @Html.EditorFor(model => model.TotalAmount, new { htmlAttributes = new { @placeholder = "Total Amount", @class = "input-summary form-control required-field" } })
                                        @Html.ValidationMessageFor(model => model.TotalAmount)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @class = "input-summary form-control required-field" } })
                                        <div class="input-group-addon input-group-addon-md">Expiry Date</div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ExpiryDate)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        @Html.EditorFor(model => model.MaxxamId, new { htmlAttributes = new { @placeholder = "Maxxam ID", @class = "input-summary form-control required-field" } })
                                        @Html.ValidationMessageFor(model => model.MaxxamId)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        @Html.EditorFor(model => model.IdCode, new { htmlAttributes = new { @placeholder = "ID Code", @class = "input-summary form-control required-field" } })
                                        @Html.ValidationMessageFor(model => model.IdCode)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        @Html.EditorFor(model => model.FinalConcentration, new { htmlAttributes = new { @placeholder = "Final Concentration", @class = "input-summary form-control required-field" } })
                                        @Html.ValidationMessageFor(model => model.FinalConcentration)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <div class="input-group-addon addon-required"></div>
                                        @Html.EditorFor(model => model.FinalVolume, new { htmlAttributes = new { @placeholder = "Final Volume", @class = "input-summary form-control required-field" } })
                                        @Html.ValidationMessageFor(model => model.FinalVolume)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href='#section-bar-2' class="btn btn-default next-section btn-next btn-review">Review and Submit</a>
                            </div>
                        </div>
                    </section>
                    <section id="section-bar-2">
                        <div class="form-group">
                            <div class="container">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Field</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody style="font-size:14px;"></tbody>
                                    <tfoot>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <input type="button" href='#section-bar-2' value="Cancel" class="btn btn-warning previous-section" />
                                    <input name="submit" type="submit" class="btn btn-primary" value="Save" />
                                    <input name="submit" type="submit" class="btn btn-primary" value="Save & New" />
                                    <div class="btn-group" data-toggle="buttons">
                                        <label class="btn btn-default center-block active"><input type="radio">Print Label</label>
                                        <label class="btn btn-default center-block"><input type="radio">Don't Print Label</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div><!-- /content -->
            </div><!-- /tabs -->
        </section>
        @Html.Partial("~/Views/Shared/_SectionsPartial.cshtml")
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/CustomMaxxamJS/intermediate-standard-form-validation.js"></script>
}