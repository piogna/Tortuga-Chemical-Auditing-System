        @if (Model.Replaces == null) {
            <dt>
                Replaces
            </dt>

            <dd>
                N/A
            </dd>
        } else {
            <dt>
                @Html.DisplayNameFor(model => model.Replaces)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Replaces)
            </dd>
        }

        @if (Model.Replaces == null) {
            <dt>
                Replaced By
            </dt>

            <dd>
                N/A
            </dd>
        } else {
            <dt>
                @Html.DisplayNameFor(model => model.ReplacedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReplacedBy)
            </dd>
        }

    </dl>
</div>

<table id="myTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Item Type</th>
            <th>@Html.DisplayNameFor(model => model.PrepListItems)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PrepListItems) {
            <tr>
                @if (item.StockReagent != null) {
                    <td>
                        Stock Reagent
                    </td>
                    <td>
                        @item.StockReagent.ReagentName
                    </td>
                }

                @if (item.StockStandard != null) {
                    <td>
                        Stock Standard
                    </td>
                    <td>
                        @item.StockStandard.StockStandardName
                    </td>
                }

                @if (item.IntermediateStandard != null) {
                    <td>
                        Stock Intermediate Standard
                    </td>
                    <td>
                        @item.IntermediateStandard.IntermediateStandardId
                    </td>
                }
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IntermediateStandardId })
