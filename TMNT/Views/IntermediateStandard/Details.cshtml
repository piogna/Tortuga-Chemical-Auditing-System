@model TMNT.Models.ViewModels.IntermediateStandardDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-lg-12">
        <h1>
            @Model.IdCode Intermediate Standard Details
        </h1>
        <ol class="breadcrumb no-border-radius">
            <li class="active">
                <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-balance-scale"></i> Intermediate Standards / <i class="fa fa-clipboard"></i> @Model.IdCode Intermediate Standard Details
            </li>
        </ol>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index", "IntermediateStandard", null, htmlAttributes: new { @class = "btn btn-default" })
    @Html.ActionLink("Edit " + @Model.IdCode, "Edit", new { id = Model.IntermediateStandardId }, htmlAttributes: new { @class = "btn btn-default" })
</p>

<hr />

@Html.Partial("_SectionHeader", "Intermediate Standard Information")

<div class="container">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.IdCode)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IdCode)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCreated)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UsedFor)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UsedFor)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateOpened)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateOpened)
            </dd>

            @if (Model.Replaces == null) {
                <dt>
                    Replaces
                </dt>

                <dd>
                    N/A
                </dd>
            } else {
                <dt>
                    @Html.DisplayNameFor(model => model.Replaces)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Replaces)
                </dd>
            }

            @if (Model.Replaces == null) {
                <dt>
                    Replaced By
                </dt>

                <dd>
                    N/A
                </dd>
            } else {
                <dt>
                    @Html.DisplayNameFor(model => model.ReplacedBy)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ReplacedBy)
                </dd>
            }

        </dl>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ExpiryDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateModified)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateModified)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastModifiedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastModifiedBy)
            </dd>
        </dl>
    </div>
</div>

@Html.Partial("_SectionHeader", "Prep List Table")

<div class="container">
    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Action</th>
                <th>Item Type</th>
                <th>Item ID Code</th>
                <th>Item Name</th>
                <th>Amount Taken</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PrepListItems) {
                <tr>
                    @if (item.StockReagent != null) {
                        <td>
                            <a href="@Url.Action("Details", "Reagent", new { id = item.StockReagent.ReagentId })">
                                <div>
                                    <span class="pull-left">View Details</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </td>
                        <td>
                            Stock Reagent
                        </td>
                        <td>
                            @item.StockReagent.IdCode
                        </td>
                        <td>
                            @item.StockReagent.ReagentName
                        </td>
                    }

                    @if (item.StockStandard != null) {
                        <td>
                            <a href="@Url.Action("Details", "Standard", new { id = item.StockStandard.StockStandardId })">
                                <div>
                                    <span class="pull-left">View Details</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </td>
                        <td>
                            Stock Standard
                        </td>
                        <td>
                            @item.StockStandard.IdCode
                        </td>
                        <td>
                            @item.StockStandard.StockStandardName
                        </td>
                    }

                    @if (item.IntermediateStandard != null) {
                        <td>
                            <a href="@Url.Action("Details", "IntermediateStandard", new { id = item.IntermediateStandard.IntermediateStandardId })">
                                <div>
                                    <span class="pull-left">View Details</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </td>
                        <td>
                            Intermediate Standard
                        </td>
                        <td>
                            @item.IntermediateStandard.IdCode
                        </td>
                        <td>
                            @item.IntermediateStandard.IntermediateStandardId
                        </td>
                    }
                    <td>
                        @item.Amount@item.Unit.UnitShorthandName
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>

        </tfoot>
    </table>
</div>