@model IEnumerable<TMNT.Models.Ideas>

@{
    ViewBag.Title = "Ideas";
}

<div class="row">
    <div class="col-lg-12">
        <h1>
            Ideas
        </h1>

        <div class="panel panel-primary no-border-radius">
            <div class="panel-heading no-border-radius">
                <h4> Have an idea or concern? Share it with us!</h4>
            </div>
        </div>

        <ol class="breadcrumb no-border-radius">
            <li class="active">
                <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-lightbulb-o"></i> Ideas <i class="fa fa-star-o"></i>
            </li>
        </ol>
    </div>
</div>

<p>
    @Html.ActionLink("New Idea", "Create", "Ideas", null, htmlAttributes: new { @class = "btn btn-default" })
</p>

<table class="table table-striped table-bordered table-index">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
    </tr>
}
</table>