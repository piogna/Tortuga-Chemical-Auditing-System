@model TMNT.Models.ViewModels.WorkingStandardViewModel

@{
    ViewBag.Title = "Create";
}

<style>
    #page-wrapper {
        min-height: 900px;
    }

    input[type=text] {
        width: 100%;
    }

    button {
        width: 33%;
        color: #fff !important;
        border-radius: 0 !important;
        background-color: #428BCA !important;
        float: right;
    }

    .next-section {
        float: right;
        bottom: 0;
    }

    .previous-section {
        float: left;
        bottom: 0;
    }
</style>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    New Working Standard
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-flask"></i> New Working Standard
                    </li>
                </ol>
            </div>
        </div>

        <section id="section-bar">
            <div class="tabs tabs-style-bar">
                <nav>
                    <ul>
                        <li><a href="#section-bar-1" class="icon icon-config"><span>Standard Info Part I</span></a></li>
                        <li><a href="#section-bar-2" class="icon icon-config"><span>Standard Info Part II</span></a></li>
                        <li><a href="#section-bar-4" class="icon icon-display"><span>Finalize</span></a></li>
                        <li><a href="#section-bar-5" id="section-confirmation" style="pointer-events: none;" class="icon icon-coffee"><span>Confirmation</span></a></li>
                    </ul>
                </nav>
                @Html.ValidationSummary(true)
                <div class="content-wrap">
                    <section id="section-bar-1">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.PreparationDate) @Html.EditorFor(model => model.PreparationDate, new { htmlAttributes = new { @placeholder = "Preparation Date" } })<span class="required"></span>
                                    @Html.ValidationMessageFor(model => model.PreparationDate)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CatalogueCode, new { htmlAttributes = new { @placeholder = "Lot #" } })<span class="required"></span>
                                    @Html.ValidationMessageFor(model => model.CatalogueCode)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.InventoryItemName, new { htmlAttributes = new { @placeholder = "Inventory Item Name" } })<span class="required"></span>
                                    @Html.ValidationMessageFor(model => model.InventoryItemName)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @placeholder = "Size", @min = 0 } })<span class="required"></span>
                                    @Html.ValidationMessageFor(model => model.Size)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Grade, new { htmlAttributes = new { @placeholder = "Grade", @min = 0 } })<span class="required"></span>
                                    @Html.ValidationMessageFor(model => model.Grade)
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href='#section-bar-2' class="btn btn-default next-section">Next »</a>
                            </div>
                        </div>
                    </section>
                    <section id="section-bar-2">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CaseNumber, new { htmlAttributes = new { @placeholder = "Case Number", @min = 0 } })<span class="required"></span>
                                    @Html.ValidationMessageFor(model => model.CaseNumber)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.UsedFor, new { htmlAttributes = new { @placeholder = "Used For", @cols = 48, @rows = 5 } })<span class="required"></span>
                                    @Html.ValidationMessageFor(model => model.UsedFor)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.DateCreated) @Html.EditorFor(model => model.DateCreated, new { htmlAttributes = new { @placeholder = "Date Created" } })<span class="required"></span>
                                    @Html.ValidationMessageFor(model => model.DateCreated)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.LabelFor(model => model.DateModified) @Html.EditorFor(model => model.DateModified, new { htmlAttributes = new { @placeholder = "Date Modified" } })<span class="required"></span>
                                    @Html.ValidationMessageFor(model => model.DateModified)
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href='#section-bar-2' class="btn btn-default next-section">Next »</a>
                                <a href='#section-bar-1' class="btn btn-default previous-section">« Previous</a>
                            </div>
                        </div>
                    </section>
                    <section id="section-bar-3">
                        <div class="form-group">
                            <div style="text-align:center;" class="page-header">
                                <h2>Are You Sure?</h2>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-md-offset-3">
                                    <a href='#section-bar-2' class="btn btn-default previous-section" style="margin:0 10px 0 30px;">&#x2717; No, Go Back</a>
                                    <input type="submit" class="btn btn-default" value="&#x2713; Yes, Create Record" />
                                </div>
                                <div class="col-md-4">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox"> Print Label?
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section id="section-bar-4">
                        <div class="form-group" style="text-align:center;">
                            <div style="padding-bottom:20px;">Summary</div>
                            <div>Summary of Data would go here..</div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-md-10">
                                @Html.ActionLink("Dashboard", "Index", new { @controller = "Home" }, new { @style = "margin-right:15px;", @class = "btn btn-default" })
                                @Html.ActionLink("New Stock Reagent", "Create", new { @controller = "Reagent" }, new { @style = "margin-right:15px;", @class = "btn btn-default" })
                                @*<a onclick="window.print()" href='#section-bar-1' class="btn btn-default">Print Label</a>*@
                            </div>
                        </div>
                    </section>
                </div><!-- /content -->
            </div><!-- /tabs -->
        </section>
        @Html.Partial("~/Views/Shared/_SectionsPartial.cshtml")
    </div>
}

@section Scripts {
    
}
