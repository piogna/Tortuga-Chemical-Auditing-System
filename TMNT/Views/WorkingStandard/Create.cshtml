@model TMNT.Models.ViewModels.WorkingStandardCreateViewModel

@{
    ViewBag.Title = "Create";
}

@section AddToHead {
    <link href="~/Content/chosen.css" rel="stylesheet" />
    <link href="~/Content/Datepicker/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    @Styles.Render("~/maxxam-forms")
    <style>
        .form-group {
            margin-left: 0 !important;
            margin-right: 0 !important;
        }

        .select2-container--default {
            width: 100% !important;
        }

        .select2-search__field {
            width: 100% !important;
        }

        .lot-numbers-hidden option {
            display: none;
        }

        .lot-numbers-hidden optgroup {
            display: none;
        }

        .lot-numbers-shown {
            display: block;
        }

        .lot-numbers-no-selection {
            display: block;
        }

        .opt {
            display: none;
        }

            .opt option {
                display: none;
            }

        ul.chosen-choices {
            border: 1px solid #ccc !important;
            background-image: none !important;
        }

        li.search-field {
            padding-left: 5px !important;
        }

        li.search-choice {
            margin: 5px 5px 3px 0 !important;
        }

        div.chosen-container {
            width: 50% !important;
        }

        option[disabled] {
            color: #bbb;
        }

        .tab {
            cursor: pointer;
            border: 1px solid #cfcfcf;
            padding: 6px 0 6px 0;
            margin-bottom: 10px;
        }

        .tab-unselected {
            background: #cfcfcf;
        }

        .tab-selected {
            border-bottom: none;
        }

        #solvent-input-container > .input-group {
            width: 100%;
        }

        .solvent-input-container-display {
            display: none;
        }

        /* Summary */
        .height {
            min-height: 240px;
        }

        .iconbig {
            font-size: 77px;
            color: #5CB85C;
        }

        .uppercase {
            text-transform:uppercase;
        }

        .font-fourteen {
            font-size:14px;
        }
    </style>
}

@using (Html.BeginForm(Html.BeginForm("Create", "WorkingStandard", null, FormMethod.Post, new { enctype = "multipart/form-data" }))) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    New Working Standard
                </h1>
                <ol class="breadcrumb no-border-radius">
                    <li class="active">
                        <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-flask"></i> Working Standards / <i class="fa fa-star-o"></i> New Working Standard
                    </li>
                </ol>
            </div>
        </div>

        <p>
            @Html.ActionLink("Back to List", "Index", "WorkingStandard", null, htmlAttributes: new { @class = "btn btn-default btn-back-to-list" })
        </p>

        <section id="section-bar">
            <div class="tabs tabs-style-bar">
                <nav>
                    <ul>
                        <li><a href="#section-bar-1" class="icon icon-box"><span>Prep List</span></a></li>
                        <li><a href="#section-bar-2" class="icon icon-config"><span>Working Standard Info</span></a></li>
                        <li><a href="#section-bar-3" class="icon icon-display"><span>Finalize</span></a></li>
                    </ul>
                </nav>
                <div class="content-wrap">
                    <section id="section-bar-1">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <!-- Start Building Recipe Section -->
                        @Html.Partial("_SectionHeader", "Build Your Working Standard")
                        <div id="build-recipe">
                            <div class="col-lg-4">
                                <div class="alert alert-grey no-border-radius prep-list-wrapper">
                                    <h4 class="text-center">Prep List Item</h4>
                                    <hr />
                                    <!-- tabs to show either compounds or solvents/acids -->
                                    @*<div class="col-md-6 tab tab-selected text-center" id="compounds">Compounds</div>
                                    <div class="col-md-6 tab tab-unselected text-center" id="solvents">Solvents/Acids</div>*@
                                    <div id="compound-section">
                                        <div class="form-group zero-left-right-margin">
                                            <div class="input-group">
                                                <div class="input-group-addon"></div>
                                                <select name="Chemical Type" id="ChemicalType" class="type-validation input-xlarge-fuid form-control valid no-border-radius">
                                                    <option value="">Choose Chemical Type</option>
                                                    <optgroup label="Item Type">
                                                        @foreach (var item in Model.ChemicalTypes) {
                                                            <option value="@item">
                                                                @item
                                                            </option>
                                                        }
                                                    </optgroup>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group zero-left-right-margin">
                                            <div class="input-group">
                                                <div class="input-group-addon"></div>
                                                <select name="LotNumbers" disabled="disabled" id="LotNumbers" class="type-validation input-xlarge-fuid form-control valid no-border-radius">
                                                    <option class="opt-label" value="">Select a Chemical Type First</option>
                                                    <optgroup class="opt opt-reagent" label="Reagents">
                                                        @foreach (var item in Model.StockReagents) {
                                                            if (item.StockReagent.ExpiryDate < DateTime.Today) {
                                                                <option disabled="disabled" value="@item.StockReagent.LotNumber">@item.StockReagent.IdCode - Expired</option>
                                                            } else {
                                                                <option value="@item.StockReagent.LotNumber">@item.StockReagent.IdCode</option>
                                                            }
                                                        }
                                                    </optgroup>
                                                    <optgroup class="opt opt-standard" label="Standards">
                                                        @foreach (var item in Model.StockStandards) {
                                                            if (item.StockStandard.ExpiryDate < DateTime.Today) {
                                                                <option disabled="disabled" value="@item.StockStandard.LotNumber">@item.StockStandard.IdCode - Expired</option>
                                                            } else {
                                                                <option value="@item.StockStandard.LotNumber">@item.StockStandard.IdCode</option>
                                                            }
                                                        }
                                                    </optgroup>
                                                    <optgroup class="opt opt-int-standard" label="Intermediate Standards">
                                                        @foreach (var item in Model.IntermediateStandards) {
                                                            if (item.IntermediateStandard.ExpiryDate < DateTime.Today) {
                                                                <option disabled="disabled" value="@item.IntermediateStandard.MaxxamId">@item.IntermediateStandard.IdCode - Expired</option>
                                                            } else {
                                                                <option value="@item.IntermediateStandard.MaxxamId">@item.IntermediateStandard.IdCode</option>
                                                            }
                                                        }
                                                    </optgroup>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group zero-left-right-margin">
                                            <div class="input-group">
                                                <div class="input-group-addon"></div>
                                                <input name="Amount" id="PrepAmount" type="number" min="0" class="form-control text-box single-line no-border-radius" autocomplete="off" placeholder="Amount" />
                                            </div>
                                        </div>
                                        <div class="form-group zero-left-right-margin">
                                            <div class="input-group">
                                                <div class="input-group-addon"></div>
                                                <select data-placeholder="Units.." name="Unit" id="PrepUnits" class="Units type-validation input-xlarge-fuid form-control valid no-border-radius" multiple="multiple">
                                                    <optgroup label="Weights">
                                                        @foreach (var item in Model.WeightUnits) {
                                                            <option value="@item.UnitId">
                                                                @item.UnitShorthandName
                                                            </option>
                                                        }
                                                    </optgroup>
                                                    <optgroup label="Volumes">
                                                        @foreach (var item in Model.VolumetricUnits) {
                                                            <option value="@item.UnitId">
                                                                @item.UnitShorthandName
                                                            </option>
                                                        }
                                                    </optgroup>
                                                    <optgroup label="Other">
                                                        <option value="Other">@Model.OtherUnit.UnitShorthandName</option>
                                                    </optgroup>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group zero-left-right-margin">
                                            <a href="#" id="another-item" class="btn btn-primary">Add Item</a>
                                        </div>
                                    </div>
                                    <!-- Solvents/Acids -->
                                    @*<div id="solvent-section">
                <div class="form-group zero-left-right-margin solvent-input-container-display solvent-input">
                    <div class="input-group">
                        <div class="input-group-addon"></div>
                        <select name="Solvents" id="SolventAcid" class="type-validation input-xlarge-fuid form-control valid no-border-radius">
                            <option value="">Choose Chemical Type</option>
                            <optgroup label="Item Type">
                                <option value="Solvent">Solvent</option>
                                <option value="Acid">Acid</option>
                            </optgroup>
                        </select>
                    </div>
                </div>

                <div class="form-group zero-left-right-margin solvent-input-container-display solvent-input" id="solvent-input-container">
                    <div class="input-group">
                        <div class="input-group-addon"></div>
                        <input name="Solvent" id="Solvent" type="text" min="0" class="form-control text-box single-line no-border-radius" autocomplete="off" placeholder="Solvent/Acid Name" />
                    </div>
                </div>
            </div>*@
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="alert alert-grey no-border-radius prep-list-wrapper">
                                    <h4 class="text-center">Prep List</h4>
                                    <hr />
                                    <div style="font-size:14px;">
                                        <table id="recipe-table" class="table alert-success table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Item #</th>
                                                    <th>Chemical Type</th>
                                                    <th>ID</th>
                                                    <th>Amount</th>
                                                    <th>Remove Item</th>
                                                </tr>
                                            </thead>
                                            <tbody id="recipe-tbody"></tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="form-group">
                                </div>
                                <div class="form-group">
                                    <a href='#section-bar-2' disabled="disabled" class="btn btn-primary next-section btn-next">Next »</a>
                                </div>
                                <div class="form-group">
                                    <div id="button-message" class="pull-right button-message-error">Fill out required fields.</div>
                                </div>
                            </div>
                        </div>
                        <!-- /End Recipe Section -->
                    </section>
                    <!-- SECTION TWO -->
                    <section id="section-bar-2">
                        @Html.Partial("_SectionHeader", "Working Standard Information")
                        <div class="container">
                            <div class="col-md-12">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required" title="Required Field"></div>
                                            @Html.EditorFor(model => model.UsedFor, new { htmlAttributes = new { @placeholder = "Used For", @rows = 6, @style = "resize:none;", @class = "input-summary-pt1 form-control no-border-radius required-field-s2" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.UsedFor)
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required" title="Required Field"></div>
                                            <select id="storage-locations" name="Storage" class="form-control no-border-radius required-field-s2 input-summary-pt1">
                                                <option value="">Storage Requirement..</option>
                                                <optgroup label="Storage Req's'">
                                                    @foreach (var item in Model.Storage) {
                                                        <option value="@item">
                                                            @item
                                                        </option>
                                                    }
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 pull-right">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required" title="Required Field"></div>
                                            @Html.EditorFor(model => model.TotalAmount, new { htmlAttributes = new { @placeholder = "Total Amount", @style = "width:50%;", @class = "units-list input-summary-pt1 form-control required-field-s2", @Value = "", @autocomplete = "off", @min = 0.01 } })
                                            <select data-placeholder="Units.." name="TotalAmountUnits" id="Units" class="Units type-validation input-xlarge-fuid form-control valid no-border-radius required-field-s2" multiple="multiple">
                                                <optgroup label="Weights">
                                                    @foreach (var item in Model.WeightUnits) {
                                                        <option value="@item.UnitShorthandName">
                                                            @item.UnitShorthandName
                                                        </option>
                                                    }
                                                </optgroup>
                                                <optgroup label="Volumes">
                                                    @foreach (var item in Model.VolumetricUnits) {
                                                        <option value="@item.UnitShorthandName">
                                                            @item.UnitShorthandName
                                                        </option>
                                                    }
                                                </optgroup>
                                                <optgroup label="Other">
                                                    <option value="Other">Other</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.TotalAmount)
                                    </div>
                                    <div id="other-unit-wrapper" class="form-group hide">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required" title="Required Field"></div>
                                            @Html.EditorFor(model => model.OtherUnitExplained, new { htmlAttributes = new { @placeholder = "Other Unit Follow-up", @class = "input-summary-pt1 form-control" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.OtherUnitExplained)
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required" title="Required Field"></div>
                                            @Html.EditorFor(model => model.FinalConcentration, new { htmlAttributes = new { @placeholder = "Final Concentration", @style = "width:50%;", @class = "input-summary-pt2 form-control required-field-s2", @Value = "", @autocomplete = "off", @min = 0.01 } })
                                            <select data-placeholder="Units.." name="FinalConcentrationUnits" id="ConcentrationUnits" class="type-validation input-xlarge-fuid form-control valid no-border-radius required-field-s2" multiple="multiple">
                                                <optgroup label="Units">
                                                    @foreach (var item in Model.ConcentrationUnits) {
                                                        <option value="@item">
                                                            @item
                                                        </option>
                                                    }
                                                </optgroup>
                                                <optgroup label="Other">
                                                    <option value="Other">Other</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.FinalConcentration)
                                    </div>
                                    <div id="conc-other-unit-wrapper" class="form-group hide">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required" title="Required Field"></div>
                                            @Html.EditorFor(model => model.ConcentrationOtherUnitExplained, new { htmlAttributes = new { @placeholder = "Other Unit Follow-up", @class = "input-summary-pt2 form-control" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.ConcentrationOtherUnitExplained)
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required" title="Required Field"></div>
                                            <div class="input-group-addon">
                                                <div style="margin-top:-5px;" class="checkbox">
                                                    <label>@Html.EditorFor(model => model.IsExpiryDateBasedOnDays) Expire By Days?</label>
                                                </div>
                                            </div>
                                            @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @placeholder = "Click to Select Date", @class = "form-control date-input input-summary-pt2 required-field", @Value = "", @type = "text" } })
                                            @Html.EditorFor(model => model.DaysUntilExpired, new { htmlAttributes = new { @placeholder = "Days Until Expired", @class = "form-control hide-expiry-input input-summary-pt2 required-field", @Value = "", @type = "hidden" } })                                        <div class="input-group-addon input-group-addon-md">Expiry Date</div>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.ExpiryDate)
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required" title="Required Field"></div>
                                            <select id="device-selector" name="Devices" class="select2 form-control no-border-radius required-field-s2" multiple="multiple">
                                                <optgroup label="Balance ID's">
                                                    @foreach (var item in Model.BalanceDevices) {
                                                        if (@item.IsVerified) {
                                                            <option value="@item.DeviceCode">
                                                                @item.DeviceCode
                                                            </option>
                                                        } else {
                                                            <option disabled="disabled" value="@item.DeviceCode">
                                                                @item.DeviceCode - Not Verified
                                                            </option>
                                                        }
                                                    }
                                                </optgroup>
                                                <optgroup label="Volumetric ID's">
                                                    @foreach (var item in Model.VolumetricDevices) {
                                                        if (@item.IsVerified) {
                                                            <option value="@item.DeviceCode">
                                                                @item.DeviceCode
                                                            </option>
                                                        } else {
                                                            <option disabled="disabled" value="@item.DeviceCode">
                                                                @item.DeviceCode - Not Verified
                                                            </option>
                                                        }
                                                    }
                                                    <option value="None">No Device Used</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @Html.Partial("_SectionHeader", "Safety Notes")
                        <div class="container">
                            <div class="col-md-12">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon addon-required" title="Required Field"></div>
                                            @Html.EditorFor(model => model.SafetyNotes, new { htmlAttributes = new { @rows = 2, @style = "resize:none;", @placeholder = "Safety Notes", @class = "input-summary form-control no-border-radius required-field-s2", @maxlength = 50 } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.SafetyNotes)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-1 col-md-10" style="padding-top:20px;">
                                        <a href='#section-bar-3' disabled="disabled" id="btn-review" class="btn btn-primary next-section btn-review">Review and Submit</a>
                                        <a href='#section-bar-1' class="btn btn-warning previous-section">« Previous</a>
                                    </div>
                                    <div class="col-md-offset-1 col-md-10">
                                        <div id="button-message-s2" class="pull-right button-message-error">Fill out required fields.</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section id="section-bar-3">
                        <!-- Summary Page -->
                        <div class="container">
                            <div class="row text-center">
                                <div class="col-xs-12">
                                    <i class="fa fa-search-plus pull-left icon"></i>
                                    <h2>Summary</h2>
                                    <hr>
                                    <div class="row font-fourteen">
                                        <div class="col-xs-12 col-md-3 col-lg-3">
                                            <div class="panel panel-default height no-border-radius">
                                                <div class="panel-heading uppercase uppercase">Department Details</div>
                                                <div class="panel-body">
                                                    <dl>
                                                        <dt>Department: </dt>
                                                        <dd>@Model.Department.DepartmentName</dd>
                                                        <dt>Sub Department: </dt>
                                                        <dd>@Model.Department.SubDepartment</dd>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md-3 col-lg-3">
                                            <div class="panel panel-default height no-border-radius">
                                                <div class="panel-heading uppercase">Location Details</div>
                                                <div class="panel-body">
                                                    <dl>
                                                        <dt>Location: </dt>
                                                        <dd>@Model.Department.Location.LocationName</dd>
                                                        <dt>Address: </dt>
                                                        <dd>@Model.Department.Location.Address</dd>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md-3 col-lg-3">
                                            <div class="panel panel-default height no-border-radius">
                                                <div class="panel-heading uppercase">Safety Information</div>
                                                <div class="panel-body">
                                                    <dl>
                                                        <dt>Safety Notes: </dt>
                                                        <dd id="summary-safety-notes"></dd>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md-3 col-lg-3">
                                            <div class="panel panel-default height no-border-radius">
                                                <div class="panel-heading uppercase">Device Details</div>
                                                <div class="panel-body">
                                                    <dl id="summary-devices"></dl>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row font-fourteen">
                                <div class="col-md-12">
                                    <div class="panel panel-default no-border-radius">
                                        <div class="panel-heading">
                                            <h3 class="text-center uppercase"><strong>Intermediate Standard Details</strong></h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="col-xs-12 col-md-6 col-lg-6">
                                                <dl id="summary-info-pt1" class="dl-horizontal"></dl>
                                            </div>
                                            <div class="col-xs-12 col-md-6 col-lg-6">
                                                <dl id="summary-info-pt2" class="dl-horizontal"></dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <input type="button" href='#section-bar-2' class="btn btn-warning previous-section" value="Cancel" />
                                <input name="submit" type="submit" class="btn btn-primary" value="Save" />
                                <input name="submit" type="submit" class="btn btn-primary" value="Save & New" />
                            </div>
                        </div>
                    </section>
                </div><!-- /content -->
            </div><!-- /tabs -->
        </section>
        @Html.Partial("~/Views/Shared/_SectionsPartial.cshtml")
    </div>
}
