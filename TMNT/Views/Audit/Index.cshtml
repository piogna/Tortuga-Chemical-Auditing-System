@{
    ViewBag.Title = "Perform Audit";
}
<div class="row">
    <div class="col-lg-12">
        <h1>
            Perform Audit
        </h1>
    </div>
</div>
<div id="audit-form">
    @using (Html.BeginForm("PerformAudit", "Audit",
            new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-inline" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="text" class="form-control" name="IdCode" placeholder="Unique ID Code" />
        </div>
        <div class="form-group">
            <label class="radio-inline"><input type="radio" name="Type" value="ws">Working Standard</label>
            <label class="radio-inline"><input type="radio" name="Type" value="is">Intermediate Standard</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Start!" class="btn btn-default" />
        </div>
    }
</div>