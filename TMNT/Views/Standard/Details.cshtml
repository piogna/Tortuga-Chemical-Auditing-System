                <dd>
                    @Html.DisplayFor(model => model.Department.Location.FaxNumber)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Department.DepartmentName)
                </dt>
                <dd>
