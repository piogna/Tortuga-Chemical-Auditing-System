@model TMNT.Models.ViewModels.StockStandardViewModel

@{
    ViewBag.Title = "Edit";
}

@section AddToHead {
    @Styles.Render("~/maxxam-forms")
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @Model.IdCode Standard Details
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-flask"></i> Stock Standards / <i class="fa fa-clipboard"></i> @Model.IdCode Standard Details
            </li>
        </ol>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index", "Standard", null, htmlAttributes: new { @class = "btn btn-default" })
</p>

@using (Html.BeginForm("Edit", "Standard", null, FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StockStandardId)

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-3" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "input-summary form-control no-border-radius" } })
                @Html.ValidationMessageFor(model => model.Amount)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Current CofA</label>
            <div class="col-md-4">
                @Html.ActionLink(Model.StockStandardName + " - " + Model.CertificateOfAnalysis.DateAdded.ToString().Split(' ')[0] + " CofA", "ViewPDF", "PDFViewer", new { id = Model.CertificateOfAnalysis.CertificateOfAnalysisId, type = "CofA" }, htmlAttributes: new { @target = "_blank" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Upload New CofA</label>
            <div class="col-md-4">
                <input type="file" id="CertificateOfAnalysis" name="uploadCofA" class="form-control btn btn-default no-border-radius" accept=".pdf" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Current MSDS</label>
            <div class="col-md-4">
                @Html.ActionLink(Model.StockStandardName + " - " + Model.MSDS.DateAdded.ToString().Split(' ')[0] + " MSDS", "ViewPDF", "PDFViewer", new { id = Model.MSDS.MSDSId, type = "MSDS" }, htmlAttributes: new { @target = "_blank" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Upload New MSDS</label>
            <div class="col-md-4">
                <input type="file" id="MSDS" name="uploadMSDS" class="form-control btn btn-default no-border-radius" accept=".pdf" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-4">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}