@using TMNT.Models
@model ProfileViewModel

@using (Html.BeginForm("ChangePassword", "Manage", null, FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()
    <h4 class="text-center">Change Password Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    if (TempData["Success"] != null) {
        <div class="text-success">• @TempData["Success"].ToString()</div>
    } else if (TempData["Error"] != null) {
        foreach (var item in (TempData["Error"] as string[])) {
            <!-- display errors -->
            <div class="text-danger">• @item</div>
        }
    }
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-6 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control no-border-radius" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-6 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control no-border-radius" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control no-border-radius" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10" style="margin-top:20px;">
            <input type="submit" value="Change Password" class="btn btn-primary" />
        </div>
    </div>
}