@model TMNT.Models.ViewModels.BalanceTestViewModel

@{
    ViewBag.Title = "Create";
}

<style>
    #page-wrapper {
        min-height: 900px;
    }

    input[type=text] {
        width: 100%;
        border-radius: 0 !important;
    }

    button {
        width: 33%;
        color: #fff !important;
        border-radius: 0 !important;
        background-color: #428BCA !important;
        float: right;
    }

    .next-section {
        float: right;
        bottom: 0;
    }

    .previous-section {
        float: left;
        bottom: 0;
    }
</style>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    New Daily Balance Verification Test
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i>@Html.ActionLink(" Dashboard", "Index", "Home") / <i class="fa fa-flask"></i> New Balance Test
                    </li>
                </ol>
            </div>
        </div>

        <section id="section-bar">
            <div class="tabs tabs-style-bar">
                <nav>
                    <ul>
                        <li class="section-list"><a href="#section-bar-1" class="icon icon-config"><span>Test Info</span></a></li>
                        <li class="section-list"><a href="#section-bar-3" class="icon icon-display"><span>Finalize</span></a></li>
                        <li class="section-list"><a href="#section-bar-4" id="section-confirmation" style="pointer-events: none;" class="icon icon-coffee"><span>Confirmation</span></a></li>
                    </ul>
                </nav>
                @Html.ValidationSummary(true)
                <div class="content-wrap">
                    <section id="section-bar-1">
                        <div class="form-group">
                            <div class="col-lg-3 col-lg-offset-9">
                                <input value="2015-04-13" type="text" disabled />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.BalanceId, new { htmlAttributes = new { @placeholder = "Balance ID" } })
                                        @Html.ValidationMessageFor(model => model.BalanceId)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @* This is the area in question for the DropDownList - requires functionality *@
                                        @*@Html.DropDownListFor(model => model.Location, ViewBag.Locations as SelectList, "Select a Location")*@
                                        @Html.DropDownListFor(model => model.Location, new SelectList(ViewBag.Locations as SelectList, "Value", "Text"), new { @class = "input-xlarge-fluid" })

                                        @*@Html.EditorFor(model => model.Location, new { htmlAttributes = new { @placeholder = "Location" } })*@
                                        @Html.ValidationMessageFor(model => model.Location)
                                    </div>
                                </div>
                                @*<input class="form-control" type="text" placeholder="Balance ID" style="margin-bottom:15px;" />*@
                                @*<input class="form-control" type="text" placeholder="Location" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.WeightOne, new { htmlAttributes = new { @placeholder = "Weight One" } })
                                @Html.ValidationMessageFor(model => model.WeightOne)
                                @*<input class="form-control" type="text" placeholder="Weight One" />*@
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.WeightTwo, new { htmlAttributes = new { @placeholder = "Weight Two" } })
                                @Html.ValidationMessageFor(model => model.WeightTwo)
                                @*<input class="form-control" type="text" placeholder="Weight Two" />*@
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.WeightThree, new { htmlAttributes = new { @placeholder = "Weight Three" } })
                                @Html.ValidationMessageFor(model => model.WeightThree)
                                @*<input class="form-control" type="text" placeholder="Weight Three" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-6">
                                @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { cols = 50, rows = 6, @placeholder = "Comments?" } })
                                @*@Html.TextAreaFor(model => model.Comments, new { htmlAttributes = new { cols = 50, rows = 6, @placeholder = "Comments?" } })*@
                                @*<textarea placeholder="Comments" rows="6" cols="50" style="resize:none;"></textarea>*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href='#section-bar-2' class="btn btn-default next-section">Next »</a>
                            </div>
                        </div>
                    </section>
                    <section id="section-bar-2">
                        <div class="form-group">
                            <div style="text-align:center;" class="page-header">
                                <h2>Are You Sure?</h2>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-md-offset-4">
                                    <a href='#section-bar-2' class="btn btn-default previous-section" style="margin:0 10px 0 15px;">&#x2717; No, Go Back</a>
                                    <input type="submit" class="btn btn-default" value="&#x2713; Yes, Create Record" />
                                    @*<input style="margin-left:8%;" type="submit" value="&#x2713; Yes, Create Record" class="btn btn-default icon-home" />*@
                                </div>
                            </div>
                        </div>
                    </section>
                    <section id="section-bar-3">
                        <div class="form-group" style="text-align:center;">
                            <div style="padding-bottom:20px;">Summary</div>
                            <div>Summary of Data would go here..</div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4 col-md-offset-4">
                                    @Html.ActionLink("Dashboard", "Index", new { @controller = "Home" }, new { @class = "btn btn-default col-md-offset-2" })
                                    @*<a style="margin-right:15px;" href='#section-bar-1' class="btn btn-default">Dashboard</a>*@
                                    @Html.ActionLink("New Balance Test", "Create", new { @controller = "ScaleTest" }, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
        @Html.Partial("~/Views/Shared/_SectionsPartial.cshtml")
    </div>
}